{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/frontend/assets/$1"
        },
        {
            "src": "/(.*\\.(css|png|jpg|jpeg|webp|svg|json|ico|js|mp3))",
            "dest": "/frontend/$1"
        },
        {
            "src": "/",
            "status": 308,
            "headers": {
                "Location": "/login"
            }
        },
        {
            "src": "/((?!api).*)",
            "dest": "/frontend/index.html"
        }
    ]
}