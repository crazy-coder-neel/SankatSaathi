{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/sw.js",
            "dest": "frontend/sw.js"
        },
        {
            "src": "/manifest.json",
            "dest": "frontend/manifest.json"
        },
        {
            "src": "/logo.jpg",
            "dest": "frontend/logo.jpg"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend/assets/$1"
        },
        {
            "src": "/(.*\\.(js|css|png|jpg|jpeg|webp|svg|json|ico|mp3))",
            "dest": "frontend/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}
